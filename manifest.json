{
  "manifest_version": 3,

  "name": "twitthat",
  "description": "Share webpage to twitter easily.",
  "version": "1.4.0",

  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
